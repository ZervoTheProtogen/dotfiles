# target                 border      bg         text   indicator  child_border
client.focused           $surface1   $surface1  $text  $surface1  $blue
client.focused_inactive  $surface0   $surface0  $text  $surface0  $surface0
client.unfocused         $base       $base      $text  $base      $surface2
client.urgent            $peach      $peach     $peach $red       $peach
client.placeholder       $base       $base      $text  $base      $base
client.background        $base

